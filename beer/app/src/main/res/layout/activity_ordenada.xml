<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".OrdenadaActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Veja na lista abaixo o melhor custo benefício. A ordem das bebidas é da mais barato para o mais caro"
        android:textSize="16dp"
        android:textStyle="bold|italic"
        />

    <ListView
        android:id="@+id/lsvBebidas"
        android:layout_width="match_parent"
        android:layout_height="400dp"></ListView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Atualizar lista"
        android:onClick="eventAtualizar"/>

</LinearLayout>